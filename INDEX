  <!-- Scroll to top button -->
  <div class="scroll-to-top" id="scroll-to-top">
    <i class="fas fa-arrow-up"></i>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
  <script id="app-script">
    document.addEventListener('DOMContentLoaded', function() {
      // Gallery Images
      const galleryImages = [
        {
          url: 'https://cdn.pixabay.com/photo/2016/11/21/15/46/barber-1846161_1280.jpg',
          alt: 'Corte de pelo moderno'
        },
        {
          url: 'https://cdn.pixabay.com/photo/2014/01/17/14/53/shaving-246946_1280.jpg',
          alt: 'Afeitado tradicional'
        },
        {
          url: 'https://cdn.pixabay.com/photo/2016/11/18/14/30/man-1834831_1280.jpg',
          alt: 'Corte con degradado'
        },
        {
          url: 'https://cdn.pixabay.com/photo/2016/11/29/06/46/adult-1867889_1280.jpg',
          alt: 'Arreglo de barba'
        },
        {
          url: 'https://cdn.pixabay.com/photo/2016/11/18/14/30/bearded-1834845_1280.jpg',
          alt: 'Estilo completo'
        },
        {
          url: 'https://cdn.pixabay.com/photo/2016/10/11/06/40/gentleman-1730742_1280.jpg',
          alt: 'Peinado clásico'
        },
        {
          url: 'https://cdn.pixabay.com/photo/2016/11/29/09/32/man-1868632_1280.jpg',
          alt: 'Corte moderno con barba'
        },
        {
          url: 'https://cdn.pixabay.com/photo/2016/11/19/13/08/fashion-1839005_1280.jpg',
          alt: 'Estilo urbano'
        },
        {
          url: 'https://cdn.pixabay.com/photo/2017/08/07/15/22/people-2604172_1280.jpg',
          alt: 'Estilo clásico'
        }
      ];
      
      // Default site settings
      const defaultSettings = {
        socialMedia: {
          facebook: 'https://www.facebook.com/elitecuts',
          twitter: 'https://www.twitter.com/elitecuts',
          instagram: 'https://www.instagram.com/elitecuts',
          youtube: 'https://www.youtube.com/elitecuts'
        },
        location: {
          address: 'Calle Gran Vía 123, Madrid, España',
          phone: '+34 912 345 678',
          email: 'info@elitecuts.com',
          mapUrl: 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3037.7899378213708!2d-3.703491284447528!3d40.41667097936461!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd42287d6da3df33%3A0x6a6fff70108e0ab2!2sPuerta%20del%20Sol%2C%20Madrid!5e0!3m2!1ses!2ses!4v1654234234123!5m2!1ses!2ses'
        }
      };
      
      // Load settings from LocalStorage or use defaults
      function loadSettings() {
        const storedSettings = localStorage.getItem('elitecuts_settings');
        return storedSettings ? JSON.parse(storedSettings) : defaultSettings;
      }
      
      // Apply settings to the site
      function applySettings(settings) {
        // Social media links
        const facebookLink = document.getElementById('facebook-link');
        const twitterLink = document.getElementById('twitter-link');
        const instagramLink = document.getElementById('instagram-link');
        const youtubeLink = document.getElementById('youtube-link');
        
        const footerFacebook = document.getElementById('footer-facebook');
        const footerTwitter = document.getElementById('footer-twitter');
        const footerInstagram = document.getElementById('footer-instagram');
        const footerYoutube = document.getElementById('footer-youtube');
        
        // Update all social media links
        facebookLink.href = settings.socialMedia.facebook || 'javascript:void(0)';
        twitterLink.href = settings.socialMedia.twitter || 'javascript:void(0)';
        instagramLink.href = settings.socialMedia.instagram || 'javascript:void(0)';
        youtubeLink.href = settings.socialMedia.youtube || 'javascript:void(0)';
        
        footerFacebook.href = settings.socialMedia.facebook || 'javascript:void(0)';
        footerTwitter.href = settings.socialMedia.twitter || 'javascript:void(0)';
        footerInstagram.href = settings.socialMedia.instagram || 'javascript:void(0)';
        footerYoutube.href = settings.socialMedia.youtube || 'javascript:void(0)';
        
        // Update location information
        document.getElementById('address-display').querySelector('span').textContent = settings.location.address;
        document.getElementById('phone-display').querySelector('span').textContent = settings.location.phone;
        document.getElementById('email-display').querySelector('span').textContent = settings.location.email;
        document.getElementById('google-map').src = settings.location.mapUrl;
      }
      
      // Mobile menu functionality
      function setupMobileMenu() {
        const menuBtn = document.getElementById('menu-btn');
        const closeMenuBtn = document.getElementById('close-menu');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
        const mobileMenuLinks = mobileMenu.querySelectorAll('a');
        
        menuBtn.addEventListener('click', function() {
          mobileMenu.classList.add('active');
          mobileMenuOverlay.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
        
        function closeMenu() {
          mobileMenu.classList.remove('active');
          mobileMenuOverlay.classList.remove('active');
          document.body.style.overflow = 'auto';
        }
        
        closeMenuBtn.addEventListener('click', closeMenu);
        mobileMenuOverlay.addEventListener('click', closeMenu);
        
        mobileMenuLinks.forEach(link => {
          link.addEventListener('click', closeMenu);
        });
      }
      
      // Navigation active state based on scroll position
      function setupScrollSpy() {
        const sections = document.querySelectorAll('section');
        const navLinks = document.querySelectorAll('.nav-link');
        
        function setActiveLink() {
          const scrollPosition = window.scrollY + 100;
          
          sections.forEach(section => {
            const sectionTop = section.offsetTop;
            const sectionHeight = section.offsetHeight;
            const sectionId = section.getAttribute('id');
            
            if(scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
              navLinks.forEach(link => {
                link.classList.remove('active');
                if(link.getAttribute('href') === `#${sectionId}`) {
                  link.classList.add('active');
                }
              });
            }
          });
        }
        
        window.addEventListener('scroll', setActiveLink);
      }
      
      // Gallery lightbox
      function setupLightbox() {
        const galleryItems = document.querySelectorAll('.gallery-item');
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.querySelector('.lightbox-img');
        const closeLightbox = document.querySelector('.close-lightbox');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        
        let currentImageIndex = 0;
        
        function openLightbox(index) {
          currentImageIndex = index;
          const imgSrc = galleryImages[index].url;
          lightboxImg.src = imgSrc;
          lightboxImg.alt = galleryImages[index].alt;
          lightbox.classList.add('active');
          document.body.style.overflow = 'hidden';
        }
        
        function closeLightboxFunc() {
          lightbox.classList.remove('active');
          document.body.style.overflow = 'auto';
        }
        
        function showNextImage() {
          currentImageIndex = (currentImageIndex + 1) % galleryImages.length;
          lightboxImg.src = galleryImages[currentImageIndex].url;
          lightboxImg.alt = galleryImages[currentImageIndex].alt;
        }
        
        function showPrevImage() {
          currentImageIndex = (currentImageIndex - 1 + galleryImages.length) % galleryImages.length;
          lightboxImg.src = galleryImages[currentImageIndex].url;
          lightboxImg.alt = galleryImages[currentImageIndex].alt;
        }
        
        galleryItems.forEach(item => {
          item.addEventListener('click', function() {
            const index = parseInt(this.getAttribute('data-index'));
            openLightbox(index);
          });
        });
        
        closeLightbox.addEventListener('click', closeLightboxFunc);
        prevBtn.addEventListener('click', showPrevImage);
        nextBtn.addEventListener('click', showNextImage);
        
        // Close lightbox when clicking outside the image
        lightbox.addEventListener('click', function(e) {
          if(e.target === lightbox) {
            closeLightboxFunc();
          }
        });
        
        // Keyboard navigation for lightbox
        document.addEventListener('keydown', function(e) {
          if (!lightbox.classList.contains('active')) return;
          
          if (e.key === 'Escape') {
            closeLightboxFunc();
          } else if (e.key === 'ArrowRight') {
            showNextImage();
          } else if (e.key === 'ArrowLeft') {
            showPrevImage();
          }
        });
      }
      
      // Form handling and LocalStorage
      function setupBookingForm() {
        const bookingForm = document.getElementById('booking-form');
        const loadingSpinner = document.getElementById('loading-spinner');
        const bookingConfirmation = document.getElementById('booking-confirmation');
        const newBookingBtn = document.getElementById('new-booking');
        
        // Set minimum date to today
        const dateInput = document.getElementById('date');
        const today = new Date();
        const formattedDate = today.toISOString().split('T')[0];
        dateInput.setAttribute('min', formattedDate);
        
        // Check if there's a draft in LocalStorage
        const formDraft = localStorage.getItem('bookingFormDraft');
        if(formDraft) {
          const formData = JSON.parse(formDraft);
          for(const key in formData) {
            const input = bookingForm.elements[key];
            if(input) {
              input.value = formData[key];
            }
          }
        }
        
        // Save form data to LocalStorage as draft
        bookingForm.addEventListener('input', function() {
          const formData = {
            name: bookingForm.elements.name.value,
            email: bookingForm.elements.email.value,
            phone: bookingForm.elements.phone.value,
            service: bookingForm.elements.service.value,
            date: bookingForm.elements.date.value,
            time: bookingForm.elements.time.value
          };
          localStorage.setItem('bookingFormDraft', JSON.stringify(formData));
        });
        
        // Form submission
        bookingForm.addEventListener('submit', function(e) {
          e.preventDefault();
          
          // Basic client-side validation
          const name = bookingForm.elements.name.value.trim();
          const email = bookingForm.elements.email.value.trim();
          const phone = bookingForm.elements.phone.value.trim();
          const service = bookingForm.elements.service.value;
          const date = bookingForm.elements.date.value;
          const time = bookingForm.elements.time.value;
          
          if(!name || !email || !phone || !service || !date || !time) {
            alert('Por favor, complete todos los campos.');
            return;
          }
          
          // Email validation
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if(!emailRegex.test(email)) {
            alert('Por favor, introduce un correo electrónico válido.');
            return;
          }
          
          // Show loading spinner
          bookingForm.classList.add('hidden');
          loadingSpinner.classList.remove('hidden');
          
          // Simulate API call (this would be replaced by a real API call)
          setTimeout(() => {
            loadingSpinner.classList.add('hidden');
            bookingConfirmation.classList.remove('hidden');
            
            // Clear the form draft from LocalStorage
            localStorage.removeItem('bookingFormDraft');
          }, 1500);
        });
        
        // New booking button
        newBookingBtn.addEventListener('click', function() {
          bookingConfirmation.classList.add('hidden');
          bookingForm.reset();
          bookingForm.classList.remove('hidden');
        });
      }
      
      // Scroll animation
      function setupScrollAnimations() {
        const fadeElements = document.querySelectorAll('.fade-in');
        
        const appearOptions = {
          threshold: 0.15,
          rootMargin: "0px 0px -100px 0px"
        };
        
        const appearOnScroll = new IntersectionObserver(function(entries, appearOnScroll) {
          entries.forEach(entry => {
            if (!entry.isIntersecting) return;
            entry.target.classList.add('visible');
            appearOnScroll.unobserve(entry.target);
          });
        }, appearOptions);
        
        fadeElements.forEach(element => {
          appearOnScroll.observe(element);
        });
      }
      
      // Scroll to top button
      function setupScrollToTop() {
        const scrollToTopBtn = document.getElementById('scroll-to-top');
        
        window.addEventListener('scroll', function() {
          if (window.pageYOffset > 300) {
            scrollToTopBtn.classList.add('visible');
          } else {
            scrollToTopBtn.classList.remove('visible');
          }
        });
        
        scrollToTopBtn.addEventListener('click', function() {
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        });
      }
      
      // Smooth scroll for anchor links
      function setupSmoothScroll() {
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function(e) {
            e.preventDefault();
            
            const targetId = this.getAttribute('href');
            const targetElement = document.querySelector(targetId);
            
            if (targetElement) {
              window.scrollTo({
                top: targetElement.offsetTop - 80,
                behavior: 'smooth'
              });
            }
          });
        });
      }
      
      // Initialize Swiper for testimonials
      function initSwiper() {
        new Swiper('.testimonials-swiper', {
          slidesPerView: 1,
          spaceBetween: 30,
          loop: true,
          autoplay: {
            delay: 5000,
            disableOnInteraction: false,
          },
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
          breakpoints: {
            768: {
              slidesPerView: 2,
            },
            1024: {
              slidesPerView: 3,
            },
          },
        });
      }
      
      // Apply initial settings
      applySettings(loadSettings());
      
      // Initialize all components
      setupMobileMenu();
      setupScrollSpy();
      setupLightbox();
      setupBookingForm();
      setupScrollAnimations();
      setupScrollToTop();
      setupSmoothScroll();
      initSwiper();
    });
  </script>
</body>
</html>
